.hero {
  position: relative;
  /* slightly smaller hero to allow next section to peek on load
     Use clamp so very large/small viewport zoom levels don't produce
     extreme heights which cause layout shifting. */
  min-height: clamp(340px, 62vh, 720px);
  display: flex;
  align-items: center;
  padding-top: clamp(4rem, 8vw, 6rem);
  padding-bottom: clamp(2.4rem, 6vw, 3.5rem);
  overflow: hidden;
}

.hero::before {
  content: '';
  position: absolute;
  inset: -10% -20%;
  background: radial-gradient(circle at 15% 35%, rgba(241, 201, 105, 0.18) 0%, transparent 45%),
    radial-gradient(circle at 85% 15%, rgba(26, 163, 124, 0.32) 0%, transparent 50%);
  opacity: 0.75;
  z-index: 0;
  transition: opacity var(--transition-base);
}

[data-theme='dark'] .hero::before {
  opacity: 0.45;
}

.hero__layout {
  position: relative;
  display: grid;
  /* Perfect 50:50 split between left dashboard and right carousel */
  grid-template-columns: 1fr 1fr;
  align-items: stretch;
  gap: clamp(1rem, 2vw, 2.2rem);
  z-index: 1;
  transform: translateY(18px);
  opacity: 0;
  transition: opacity 0.8s ease, transform 0.8s ease;
  margin-top: clamp(0.8rem, 1.5vw, 1.4rem);
  width: 100%;
  max-width: 100%;
  overflow-x: hidden;
}

/* Top intro inside hero (single-line greeting) */
.hero__topIntro {
  display: flex;
  width: 100%;
  justify-content: center;
  margin-bottom: clamp(1rem, 2.4vw, 2rem); /* more breathing room between greeting and tiles */
}

.hero__introButton {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.55rem 1rem;
  border-radius: 999px;
  font-family: var(--font-family-display);
  font-weight: 700;
  background: linear-gradient(180deg, rgba(255,255,255,0.06), rgba(247,231,206,0.02));
  border: 1px solid rgba(255,255,255,0.12);
  box-shadow: 0 8px 30px rgba(6,60,59,0.08);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: var(--text-primary);
  transition: transform var(--transition-fast), box-shadow var(--transition-fast), background var(--transition-fast);
  cursor: default;
}

.hero__introButton:hover {
  transform: translateY(-3px);
  box-shadow: var(--shadow-md);
  background: linear-gradient(180deg, rgba(255,255,255,0.1), rgba(247,231,206,0.04));
}

.hero__introButton .hero__highlight {
  /* Name should be ~40% larger than the "Hi, I'm" label and use the premium gradient */
  font-size: calc(var(--intro-size) * 1.4);
  line-height: 1;
  display: inline-block;
  position: relative;
  padding-left: 0.4rem;
  font-weight: 800;
  /* use the dedicated name gradient without white tones */
  background: var(--gradient-name);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.hero__introButton:hover .hero__highlight {
  /* subtle glow/shimmer on hover for the name */
  text-shadow: 0 10px 30px rgba(21,143,129,0.35), 0 0 18px rgba(212,175,55,0.12);
  transform: translateY(-1px);
}

/* Glassy circular icon to the left of the name-only to add the premium accent */
/* removed decorative gradient dot; name now appears without the dot */

.hero__title--singleline {
  display: inline-flex;
  align-items: baseline;
  gap: 0.6rem;
  white-space: nowrap;
  font-size: clamp(2rem, 4vw, 3rem);
  /* base size variable for the intro label so we can scale the name relative to it */
  --intro-size: clamp(1.95rem, 2.7vw, 1.575rem);
  line-height: 1.02;
}

.hero__leftTile {
  width: 100%;
  /* ensure tile fills column height so it matches the visual panel */
  height: 100%;
  padding: clamp(0.8rem, 1.8vw, 1.4rem);
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Inner content of the left tile: tighter, balanced spacing to avoid crowding */
/* Center all left tile content vertically and horizontally */
.hero__leftTile .hero__columnContent {
  width: 100%;
  max-width: 560px;
  display: flex;
  flex-direction: column;
  gap: clamp(0.8rem, 1.8vw, 1.4rem);
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 0.15rem;
}

/* Center specific sub-elements inside the left tile */
.hero__leftTile .hero__meta {
  justify-content: center;
}

.hero__leftTile .hero__actions {
  justify-content: center;
}

.hero__leftTile .hero__role {
  white-space: normal; /* allow wrapping for long role text when centered */
  display: block;
}

.hero__column--visual {
  align-items: stretch;
  justify-content: center;
}

.hero__visual {
  /* make visual stretch to match left tile height */
  height: 100%;
  width: 100%;
}

.hero__layout.is-mounted {
  opacity: 1;
  transform: translateY(0);
}

.hero__column {
  display: flex;
  flex-direction: column;
  gap: clamp(1rem, 2vw, 1.65rem);
  opacity: 0;
  transform: translateY(30px);
  transition: transform 0.9s cubic-bezier(0.19, 1, 0.22, 1), opacity 0.6s ease;
}

.hero__column.is-active {
  opacity: 1;
  transform: translateY(0);
}

.hero__column--intro {
  gap: clamp(1.25rem, 2vw, 2rem);
}

.hero__badge {
  align-self: flex-start;
  font-size: 0.85rem;
  letter-spacing: 0.18em;
  text-transform: uppercase;
}

.hero__title {
  font-family: var(--font-family-display);
  /* reduced by 25% to make the name heading smaller as requested */
  font-size: clamp(2.25rem, 4.5vw, 3.3rem);
  line-height: 1.04;
}

.hero__introRow {
  display: flex;
  align-items: baseline;
  gap: 0.6rem;
}

.hero__introLabel {
  font-family: var(--font-family-display);
  font-weight: 800;
  /* use the intro-size variable so the name can scale relative to it */
  font-size: var(--intro-size);
  letter-spacing: 0.01em;
  color: var(--text-primary);
  margin-bottom: 0;
}

/* keep a small gap between the label and the name button */
.hero__title--singleline .hero__introLabel {
  margin-right: 0.6rem;
}

.hero__highlight {
  display: inline-block;
  text-shadow: 0 18px 48px rgba(21, 143, 129, 0.35);
}

.hero__role {
  font-size: clamp(1.35rem, 2.8vw, 1.75rem);
  color: var(--text-primary);
  font-weight: 700;
  letter-spacing: -0.01em;
  display: block;
  white-space: normal;
  background: linear-gradient(135deg, var(--emerald) 0%, var(--teal) 50%, var(--gold) 100%);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
  line-height: 1.3;
  min-height: 1.9em;
}

.hero__rolePrefix {
  opacity: 0.85;
}

.hero__roleTyped {
  display: inline-block;
}

.hero__bio {
  font-size: clamp(1rem, 2vw, 1.1rem);
  line-height: 1.85;
  max-width: 600px;
  margin: 1rem 0 0 0;
  color: var(--text-muted);
  font-weight: 400;
}

.hero__meta {
  display: flex;
  flex-wrap: wrap;
  gap: 0.75rem 1.25rem;
  font-size: 0.95rem;
  color: var(--text-muted);
  width: 100%;
  justify-content: flex-start;
  margin: 0.75rem 0;
}

.hero__meta-item {
  display: inline-flex;
  align-items: center;
  gap: 0.55rem;
  padding: 0.4rem 0.85rem;
  border-radius: 999px;
  background: rgba(255, 255, 255, 0.42);
  border: 1px solid rgba(21, 143, 129, 0.25);
  backdrop-filter: blur(14px);
  -webkit-backdrop-filter: blur(14px);
}

[data-theme='dark'] .hero__meta-item {
  background: rgba(6, 35, 43, 0.5);
  border-color: rgba(241, 201, 105, 0.35);
  color: rgba(235, 245, 245, 0.82);
}

.hero__actions {
  display: flex;
  align-items: center;
  gap: 1rem;
  flex-wrap: wrap;
}

.hero__column--visual {
  align-items: center;
  justify-content: center;
}

/* Hero visual: glassy, floating, rounded, with soft shadow and reflection */
/* Hero visual: no frame, no glass-panel, just floating carousel */
.hero__visual {
  position: relative;
  height: 100%;
  min-height: 280px;
  max-height: clamp(420px, 60vh, 760px);
  overflow: hidden;
  border-radius: 40%;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  isolation: isolate;
  background: none;
  box-shadow: none;
}

/* SVG overlay (inserted in markup) provides a crisper GPU-accelerated accent line */
.hero__visual-svg {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  border-radius: inherit;
  pointer-events: none;
  z-index: 3; /* above glow but below interactive overlays */
  mix-blend-mode: overlay;
  opacity: 0.95;
}

/* Inner shadow / subtle glass bevel rendered with a pseudo-element for depth */
.hero__visual::after {
  /* subtle decorative rim and glow behind the inner carousel to create an outer frame */
  content: '';
  position: absolute;
  inset: 0;
  border-radius: inherit;
  pointer-events: none;
  z-index: 2;
  /* Layered visual: soft outer glow and a delicate gold-teal gradient ring */
  background:
    radial-gradient(120% 80% at 10% 10%, rgba(16,185,129,0.06), transparent 20%),
    radial-gradient(100% 60% at 90% 90%, rgba(212,175,55,0.05), transparent 20%);
  box-shadow: 0 10px 40px rgba(6,35,43,0.06);
  opacity: 0.95;
}

/* decorative outer rim: thin gradient stroke visible between the visual padding and inner carousel */
.hero__visual::before {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: inherit;
  pointer-events: none;
  z-index: 3;
  /* create a thin stroke inside the visual area using background-clip technique */
  background: linear-gradient(90deg, rgba(212,175,55,0.22), rgba(16,185,129,0.18));
  -webkit-mask: linear-gradient(#fff,#fff) content-box, linear-gradient(#000,#000);
  mask: linear-gradient(#fff,#fff) content-box, linear-gradient(#000,#000);
  -webkit-mask-composite: xor;
  mask-composite: exclude;
  padding: var(--hero-frame);
  opacity: 0.9;
}

.hero__visual-glow {
  position: absolute;
  inset: -20% -10% -10% -10%;
  background: radial-gradient(circle at 50% 20%, rgba(212,175,55,0.10) 0%, transparent 40%), radial-gradient(circle at 80% 80%, rgba(16,185,129,0.08) 0%, transparent 50%);
  filter: blur(48px);
  opacity: 0.45;
  pointer-events: none;
  z-index: 1;
}

[data-theme='dark'] .hero__visual-glow {
  opacity: 0.42;
}

[data-theme='dark'] .hero__visual::after {
  /* darker inner shadow and slightly stronger blur for depth in dark mode */
  box-shadow: inset 0 20px 48px rgba(0, 0, 0, 0.35), inset 0 -14px 36px rgba(6, 35, 43, 0.12);
  backdrop-filter: blur(6px);
  -webkit-backdrop-filter: blur(6px);
  opacity: 1;
}

/* Carousel: glassy, floating, rounded, with soft shadow and reflection */
.hero__carousel {
  position: relative;
  flex: 1;
  width: 100%;
  height: 100%;
  min-width: 200px;
  min-height: 200px;
  border-radius: 40%;
  overflow: hidden;
  background: rgba(255,255,255,0.08);
  box-shadow: 0 8px 40px 0 rgba(20, 184, 166, 0.18), 0 2px 32px 0 rgba(212, 175, 55, 0.10);
  backdrop-filter: blur(16px);
  -webkit-backdrop-filter: blur(16px);
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  transition: all 0.5s cubic-bezier(0.19, 1, 0.22, 1);
}

.hero__carousel:hover {
  box-shadow: 0 12px 48px 0 rgba(20, 184, 166, 0.28), 0 4px 40px 0 rgba(212, 175, 55, 0.18);
  transform: scale(1.025);
}

/* Slide: ensure rounded, floating, and glassy look */
.hero__slide {
  position: absolute;
  inset: 0;
  opacity: 0;
  height: 100%;
  width: 100%;
  transition: opacity 0.9s, filter 0.9s, transform 0.9s;
  filter: blur(2px) saturate(0.98) brightness(0.98);
  border-radius: 40%;
  overflow: hidden;
  box-shadow: 0 4px 32px 0 rgba(20, 184, 166, 0.10), 0 1.5px 16px 0 rgba(212, 175, 55, 0.08);
}

.hero__slide.is-active {
  /* Carousel image: glassy, floating, rounded, with reflection and soft shadow */
  .hero__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
    will-change: opacity, filter, transform;
    transition: opacity 0.9s, transform 1s;
    transform: translateZ(0);
    display: block;
    border-radius: 40%;
    box-shadow: 0 8px 40px 0 rgba(20, 184, 166, 0.18), 0 2px 32px 0 rgba(212, 175, 55, 0.10);
    background: rgba(255,255,255,0.08);
  }
  /* Reflection effect below carousel image */
  .hero__image::after {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    right: 0;
    bottom: -18%;
    height: 18%;
    border-radius: 40%;
    background: linear-gradient(180deg, rgba(255,255,255,0.18) 0%, rgba(255,255,255,0.01) 100%);
    opacity: 0.7;
    pointer-events: none;
    z-index: 2;
  }
  transform: translateZ(0);
  display: block;
  border-radius: 0; /* image is clipped by the slide which has the rounded corners */
  box-shadow: none; /* remove framed inner shadows */
}

/* modern glassy carousel wrapper to match teal/gold/emerald theme */


/* Four-sided enter/exit animations. The active slide uses an enter animation
   from the given data-direction; the previously-active slide gets an exit
   animation (class .was-active). Anim duration matches SLIDE_ANIM_MS in JS (~700ms).
*/
.hero__slide.is-active[data-direction='left'] { animation: hero-enter-left 700ms cubic-bezier(.22,.9,.3,1) both; }
.hero__slide.is-active[data-direction='right'] { animation: hero-enter-right 700ms cubic-bezier(.22,.9,.3,1) both; }
.hero__slide.is-active[data-direction='top'] { animation: hero-enter-top 700ms cubic-bezier(.22,.9,.3,1) both; }
.hero__slide.is-active[data-direction='bottom'] { animation: hero-enter-bottom 700ms cubic-bezier(.22,.9,.3,1) both; }

.hero__slide.was-active[data-direction='left'] { animation: hero-exit-left 700ms cubic-bezier(.22,.9,.3,1) both; z-index:1 }
.hero__slide.was-active[data-direction='right'] { animation: hero-exit-right 700ms cubic-bezier(.22,.9,.3,1) both; z-index:1 }
.hero__slide.was-active[data-direction='top'] { animation: hero-exit-top 700ms cubic-bezier(.22,.9,.3,1) both; z-index:1 }
.hero__slide.was-active[data-direction='bottom'] { animation: hero-exit-bottom 700ms cubic-bezier(.22,.9,.3,1) both; z-index:1 }

@keyframes hero-enter-left {
  0% { transform: translateX(-12%) scale(1.02); opacity: 0; filter: blur(6px); }
  60% { opacity: 1; transform: translateX(3%) scale(1.01); filter: blur(2px); }
  100% { transform: translateX(0) scale(1); opacity: 1; filter: blur(0); }
}

@keyframes hero-exit-left {
  0% { transform: translateX(0) scale(1); opacity: 1; filter: blur(0); }
  100% { transform: translateX(12%) scale(0.98); opacity: 0; filter: blur(4px); }
}

@keyframes hero-enter-right {
  0% { transform: translateX(12%) scale(1.02); opacity: 0; filter: blur(6px); }
  60% { opacity: 1; transform: translateX(-3%) scale(1.01); filter: blur(2px); }
  100% { transform: translateX(0) scale(1); opacity: 1; filter: blur(0); }
}

@keyframes hero-exit-right {
  0% { transform: translateX(0) scale(1); opacity: 1; filter: blur(0); }
  100% { transform: translateX(-12%) scale(0.98); opacity: 0; filter: blur(4px); }
}

@keyframes hero-enter-top {
  0% { transform: translateY(-12%) scale(1.02); opacity: 0; filter: blur(6px); }
  60% { opacity: 1; transform: translateY(3%) scale(1.01); filter: blur(2px); }
  100% { transform: translateY(0) scale(1); opacity: 1; filter: blur(0); }
}

@keyframes hero-exit-top {
  0% { transform: translateY(0) scale(1); opacity: 1; filter: blur(0); }
  100% { transform: translateY(12%) scale(0.98); opacity: 0; filter: blur(4px); }
}

@keyframes hero-enter-bottom {
  0% { transform: translateY(12%) scale(1.02); opacity: 0; filter: blur(6px); }
  60% { opacity: 1; transform: translateY(-3%) scale(1.01); filter: blur(2px); }
  100% { transform: translateY(0) scale(1); opacity: 1; filter: blur(0); }
}

@keyframes hero-exit-bottom {
  0% { transform: translateY(0) scale(1); opacity: 1; filter: blur(0); }
  100% { transform: translateY(-12%) scale(0.98); opacity: 0; filter: blur(4px); }
}

/* Parallax micro-translate on the active slide when motion is allowed */
.hero__carousel[data-prefers-reduced-motion='false'] .hero__slide.is-active .hero__image {
  transform: translateY(-3%) scale(1.02);
}

/* When reduced motion is preferred, disable the parallax micro-translate */
.hero__carousel[data-prefers-reduced-motion='true'] .hero__slide.is-active .hero__image {
  transform: none;
}

.hero__fallback {
  display: grid;
  place-items: center;
  text-align: center;
  padding: 3rem 2rem;
  color: var(--text-muted);
  font-size: 0.95rem;
  line-height: 1.7;
  height: 100%;
  border-radius: calc(var(--radius-xl) - 10px);
  background: rgba(255, 255, 255, 0.55);
}

[data-theme='dark'] .hero__fallback {
  background: rgba(8, 36, 43, 0.75);
  color: rgba(226, 235, 236, 0.7);
}

.hero__indicators {
  position: absolute;
  bottom: 1rem;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  gap: 0.5rem;
  z-index: 3;
  margin-top: 1.5rem;
  z-index: 5;
}

.hero__indicator {
  width: 0.75rem;
  height: 0.75rem;
  border-radius: 50%;
  border: 1px solid rgba(21, 143, 129, 0.4);
  background: rgba(255, 255, 255, 0.5);
  cursor: pointer;
  transition:
    transform var(--transition-fast),
    background var(--transition-fast),
    border-color var(--transition-fast);
}

.hero__indicator.is-active {
  transform: scale(1.2);
  background: var(--gradient-teal-gold);
  border-color: transparent;
}

[data-theme='dark'] .hero__indicator {
  background: rgba(6, 35, 43, 0.7);
  border-color: rgba(241, 201, 105, 0.35);
}

.hero__indicator:hover {
  transform: scale(1.15);
}

@media (max-width: 1080px) {
  .hero {
    min-height: auto;
    padding-top: clamp(5rem, 8vw, 7rem);
  }

  .hero__layout {
    grid-template-columns: 1fr 1fr;
    gap: clamp(1.5rem, 4vw, 2.5rem);
  }

  .hero__column--intro {
    text-align: center;
    align-items: center;
  }

  /* ensure left tile content centers on narrower screens */
  .hero__leftTile .hero__columnContent {
    align-items: center;
    text-align: center;
  }

  .hero__introRow {
    /* keep intro label and name on one row for narrow screens */
    flex-direction: row;
    gap: 0.5rem;
    justify-content: center;
    align-items: baseline;
    flex-wrap: nowrap;
  }

  /* Animated, transparent fade-scale carousel image transitions */
  .hero__slide {
    position: absolute;
    inset: 0;
    opacity: 0;
    height: 100%;
    width: 100%;
    pointer-events: none;
    border-radius: 40%;
    overflow: visible;
    z-index: 1;
    transition: none;
  }
  .hero__slide.is-active {
    opacity: 1;
    z-index: 2;
    animation: hero-fade-scale-in 0.85s cubic-bezier(.22,.9,.3,1) both;
    pointer-events: auto;
  }
  .hero__slide.was-active {
    opacity: 0;
    z-index: 1;
    animation: hero-fade-scale-out 0.7s cubic-bezier(.22,.9,.3,1) both;
  }
  @keyframes hero-fade-scale-in {
    0% { opacity: 0; transform: scale(0.92); filter: blur(8px); }
    60% { opacity: 1; transform: scale(1.04); filter: blur(2px); }
    100% { opacity: 1; transform: scale(1); filter: blur(0); }
  }
  @keyframes hero-fade-scale-out {
    0% { opacity: 1; transform: scale(1); filter: blur(0); }
    100% { opacity: 0; transform: scale(1.08); filter: blur(8px); }
  }

  .hero__meta-item {
    background: rgba(255, 255, 255, 0.45);
    padding: 0.5rem 1rem;
  }

  .hero__visual {
    width: min(616px, 92%);
    margin: 1rem auto;
  }

  .hero__role {
    font-size: clamp(1.1rem, 2.2vw, 1.4rem);
  }
}

@media (max-width: 768px) {
  .hero {
    padding-top: clamp(5.5rem, 12vw, 7rem);
    padding-bottom: clamp(3rem, 6vw, 4rem);
  }

  .hero__layout {
    grid-template-columns: 1fr;
    gap: clamp(2rem, 6vw, 3rem);
  }

  .hero__actions {
    width: 100%;
    flex-direction: column;
    gap: 0.75rem;
    padding: 0 1rem;
  }

  .hero__actions .btn {
    width: 100%;
    margin: 0;
    padding: 0.9rem 1.5rem;
  }

  .hero__meta-item {
    font-size: 0.9rem;
    padding: 0.45rem 0.9rem;
  }

  .hero__title {
    /* reduced by 25% for the 768px breakpoint */
    font-size: clamp(1.95rem, 6vw, 2.4rem);
    letter-spacing: -0.02em;
  }

  .hero__introLabel {
    font-size: clamp(1.35rem, 2.25vw, 1.5rem);
  }
}

@media (max-width: 540px) {
  .hero {
    padding-top: clamp(5rem, 10vw, 6rem);
  }

  .hero__title {
    /* reduced by 25% for very small screens */
    font-size: clamp(1.65rem, 6.75vw, 2.1rem);
  }

  .hero__bio {
    font-size: 0.95rem;
    line-height: 1.7;
    padding: 0 0.5rem;
  }

  .hero__visual {
    width: 94%;
    aspect-ratio: 4 / 5;
    /* Let the visual shrink naturally on very small screens to avoid large empty blocks */
    min-height: auto;
    padding: 0.4rem;
  }

  .hero__meta {
    gap: 0.5rem 1rem;
  }

  .hero__meta-item {
    padding: 0.4rem 0.8rem;
    font-size: 0.85rem;
  }
}

/* Extra fine-tuning for very small/mobile portrait devices (<=420px) */
@media (max-width: 420px) {
  .hero {
    padding-top: clamp(4rem, 9vw, 5.5rem);
    padding-bottom: clamp(2rem, 5vw, 3rem);
  }

  .hero__layout {
    grid-template-columns: 1fr;
    gap: clamp(1.2rem, 4vw, 2rem);
  }

  .hero__leftTile .hero__columnContent {
    max-width: 96%;
    padding: 0;
    align-items: center;
    text-align: center;
  }

  .hero__visual {
    width: 96%;
    aspect-ratio: 3 / 4;
    min-height: auto;
    margin: 0.6rem auto;
    padding: 0.35rem;
  }

  .hero__title,
  .hero__introLabel,
  .hero__role {
    text-align: center;
  }

  .hero__introButton {
    font-size: 0.95rem;
    padding: 0.45rem 0.9rem;
    white-space: normal;
  }

  .hero__actions {
    padding: 0 0.6rem;
  }

  .hero__actions .btn {
    width: 100%;
    padding: 0.8rem 1rem;
  }

  .hero__bio {
    max-width: 94%;
    padding: 0 0.6rem;
  }
}

@media (max-width: 360px) {
  .hero__title { font-size: clamp(1.3rem, 7vw, 1.9rem); }
  .hero__introLabel { font-size: clamp(1.15rem, 5vw, 1.25rem); }
  .hero__bio { font-size: 0.92rem; }
  .hero__meta-item { font-size: 0.8rem; padding: 0.35rem 0.65rem; }
}

@media (prefers-reduced-motion: reduce) {
  .hero__layout,
  .hero__column,
  .hero__slide,
  .hero__indicator {
    transition: none;
    animation: none;
    transform: none !important;
  }
}
